  <script>

    function KTemailgv(){
              var re= /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
              if (document.getElementById('EMAILgv').value !='')
          {
        
              if(re.test(document.getElementById('EMAILgv').value.trim())==false)
          
            {
              mailgv.innerText="* email sai định dạng";
              return false;
            }
            else
            {
              mailgv.innerText="";
              return true;
            }
      
        }   
      else
        {
            mailgv.innerText="* chưa nhập email";
            return false;
        }
          }
    
          function KTtengv(){
              var re=/^[A-Z]\w*/;
              if (document.getElementById('NAMEgv').value !='')
          {
        
              if(re.test(document.getElementById('NAMEgv').value.trim())==false)
          
            {
              tengv.innerText="* tên bắt đầu bằng chữ hoa";
              return false;
            }
            else
            {
              tengv.innerText="";
              return true;
            }
      
        }   
      else
        {
            tengv.innerText="* chưa nhập tên";
            return false;
        }
          }
    
          function KTsdtgv(){
              var re=/((09|03|07|08|05)+([0-9]{8})\b)/g;
              
          if (document.getElementById('PHONEgv').value !='')
          {
        
              if(re.test(document.getElementById('PHONEgv').value.trim())==false)
          
            {
              sdtgv.innerText="* số điện thoại sai định dạng";
              return false;
            }
            else
            {
              sdtgv.innerText="";
              return true;
            }
      
        }   
      else
        {
            sdtgv.innerText="chưa nhập số điện thoại";
            return false;
        }
          }
    
          
          function KTmatkhaugv(){
              var re=/.{6,}/;
              if (document.getElementById('PASSWORDgv').value !='')
          {
        
              if(re.test(document.getElementById('PASSWORDgv').value.trim())==false)
          
            {
              mkgv.innerText="* phải có ít nhất 6 kí tự";
              return false;
            }
            else
            {
              mkgv.innerText="";
              return true;
            }
      
        }   
      else
        {
            mkgv.innerText="* chưa nhập mật khẩu";
            return false;
        }
          }
    
          
          function SubmitForm(){
      if (KTmatkhaugv()==false || KTsdtgv()==false || KTtengv()==false || KTemailgv()==false)
      {
        alert("Bạn chưa nhập đầy đủ và đúng thông tin");
        return false;
      }
      return true;
     }
     
      </script>

