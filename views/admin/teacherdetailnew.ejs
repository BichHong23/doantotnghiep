                <input type="hidden" name="ROLE" value="2" />

                <div class="form-group">
                  <label class="col-md-12">Tên</label>
                  <div class="col-md-12">
                    <input type="text" placeholder="Nhập tên.." id="NAMEgv"
                      class="form-control form-control-line" value="" name="NAME" onBlur="KTtengv()">
                  </div>
                  <span id="tengv" class="text-danger"></span>
                </div>

                <div class="form-group">
                  <label for="example-email" class="col-md-12">Email</label>
                  <div class="col-md-12">
                    <input type="email" placeholder="Nhập email.." id="EMAILgv"
                      class="form-control form-control-line" value="" name="EMAIL" onBlur="KTemailgv()"/>
                  </div>
                  <span id="mailgv" class="text-danger"></span>
                </div>

                <div class="form-group">
                  <label class="col-md-12">Mật khẩu</label>
                  <div class="col-md-12">
                    <input type="password" placeholder="Nhập mật khẩu.." id="PASSWORDgv"
                      class="form-control form-control-line" name="PASSWORD" onBlur="KTmatkhaugv()"/>
                  </div>
                  <span id="mkgv" class="text-danger"></span>
                </div>

                <div class="form-group">
                  <label class="col-md-12">Điện thoại</label>
                  <div class="col-md-12">
                    <input type="text" placeholder="Nhập điện thoại.." id="PHONEgv"
                      class="form-control form-control-line" value="" name="PHONE" onBlur="KTsdtgv()" />
                  </div>
                  <span id="sdtgv" class="text-danger"></span>
                </div>

                <div class="form-group">
                  <label class="col-sm-12">Trạng thái</label>
                  <div class="col-sm-12">
                    <select class="form-control form-control-line" name="STATUS">
                      <option value="1" selected>Hoạt động</option>
                      <option value="0">Ngưng hoạt động</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-sm-12">
                    <button class="btn btn-success" onclick="return SubmitForm();" type="submit">
                      Lưu
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
