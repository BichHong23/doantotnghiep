<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <% include ../../partials/admin/head %>
</head>

<body class="fix-header">

  <div class="preloader">
    <svg class="circular" viewBox="25 25 50 50">
      <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
    </svg>
  </div>

  <div id="wrapper">
    <% include ../../partials/admin/leftmenu %>

    <!-- ============================================================== -->
    <!-- Page Content -->
    <!-- ============================================================== -->
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row bg-title">
          <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Quản lý lớp học</h4>
          </div>
          <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
              <li><a href="/admin">Trang chủ</a></li>
              <li class="active">Quản lý khóa học</li>
            </ol>
          </div>
          <!-- /.col-lg-12 -->
        </div>
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <div class="white-box">
              <form class="form-horizontal form-material" action="/admin/classtimeslide/edit" method="post"
                enctype="multipart/form-data">

                <input type="hidden" name="ID" value="" />
                <input type="hidden" name="ID_COURSE" value="<%= courseId %>" />
                <input type="hidden" name="ID_CLASS" value="<%= classId %>" />
                <input type="hidden" name="ID_CLASS_TIME" value="<%= classSlideId %>" />

                <div class="form-group">
                  <label class="col-md-12">Thứ tự slide</label>
                  <div class="col-md-12">
                    <input type="number" placeholder="Thứ tự slide.."
                      class="form-control form-control-line" name="INDEX_SLIDE"
                      value="" id="INDEX_SLIDE" min="1">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-12">Upload slide hình</label>
                  <div class="col-md-12">
                    <input type="file" placeholder="Upload word/pdf.."
                      class="form-control form-control-line" name="filetoupload"
                      value="" id="filetoupload">
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-sm-12">
                    <button class="btn btn-success" onclick="submitform()" type="button">
                      Lưu
                    </button>
                    <button class="btn btn-light" type="button"
                      onclick="window.location.href=
                        '/admin/<%= courseId %>/classtime/<%= classId %>/edit/<%= classSlideId %>'">

                      Quay lại
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->
  </div>

  <script>
    function submitform() {
      if($('#INDEX_SLIDE').val().trim().length == 0 ||
        $('#filetoupload').val().trim().length == 0) {

          alert('Vui lòng điền đầy đủ thông tin!');
          return false;

        } else {
          $('form').submit();
        }
    }
  </script>

  <% include ../../partials/admin/footer %>
</body>

</html>
