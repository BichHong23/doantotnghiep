<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <% include ../../partials/admin/head %>
</head>

<body class="fix-header">

  <div class="preloader">
    <svg class="circular" viewBox="25 25 50 50">
      <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
    </svg>
  </div>

  <div id="wrapper">
    <% include ../../partials/admin/leftmenu %>

    <!-- ============================================================== -->
    <!-- Page Content -->
    <!-- ============================================================== -->
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row bg-title">
          <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Quản lý giáo viên</h4>
          </div>
          <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
              <li><a href="/admin">Trang chủ</a></li>
              <li class="active">Quản lý giáo viên</li>
            </ol>
          </div>
          <!-- /.col-lg-12 -->
        </div>
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <div class="white-box">
              <form class="form-horizontal form-material" action="/admin/teacher/edit" method="post">

                <input type="hidden" name="ID" value="<%= teacherOne.ID %>" />
                <input type="hidden" name="ROLE" value="<%= teacherOne.ROLE %>" />

                <div class="form-group">
                  <label class="col-md-12">Tên</label>
                  <div class="col-md-12">
                    <input type="text" placeholder="Nhập tên.." class="form-control form-control-line"
                      value="<%= teacherOne.NAME %>" name="NAME" id="NAME">
                  </div>
                </div>

                <div class="form-group">
                  <label for="example-email" class="col-md-12">Email</label>
                  <div class="col-md-12">
                    <input type="email" placeholder="Nhập email.." class="form-control form-control-line"
                      value="<%= teacherOne.EMAIL %>" name="EMAIL" id="EMAIL">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-12">Mật khẩu</label>
                  <div class="col-md-12">
                    <input type="password" placeholder="Nhập mật khẩu.." class="form-control form-control-line"
                      name="PASSWORD" id="PASSWORD">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-12">Điện thoại</label>
                  <div class="col-md-12">
                    <input type="text" placeholder="Nhập điện thoại.." class="form-control form-control-line"
                      value="<%= teacherOne.PHONE %>" name="PHONE" id="PHONE">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-12">Trạng thái</label>
                  <div class="col-sm-12">
                    <select class="form-control form-control-line" name="STATUS">
                      <% if(teacherOne.STATUS == 1) { %>
                      <option value="1" selected>Hoạt động</option>
                      <option value="0">Ngưng hoạt động</option>
                      <% } else { %>
                      <option value="1">Hoạt động</option>
                      <option value="0" selected>Ngưng hoạt động</option>
                      <% } %>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-sm-12">
                    <button class="btn btn-success" onclick="submitform();" type="button">
                      Lưu
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->
  </div>

  <script>
    function submitform() {
      if($('#NAME').val().trim().length == 0 ||
        $('#EMAIL').val().trim().length == 0 ||
        $('#PHONE').val().trim().length == 0) {

          alert('Vui lòng điền đầy đủ thông tin!');
          return false;

        } else {
          $('form').submit();
        }
    }
  </script>

  <% include ../../partials/admin/footer %>
</body>

</html>
